generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL")
}

model Question {
  id               String   @id @default(uuid())
  text             String
  answers          Answer[]
  confirmationText String

  @@map("questions")
}

model Answer {
  id            String   @id @default(uuid())
  text          String
  isNotClicable Boolean
  questionId    String
  question      Question @relation(fields: [questionId], references: [id])

  @@map("answers")
}
